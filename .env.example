# The base directory where all backups are stored.
BASE_BACKUP_DIR="/opt/kabballa/apps/una-backup/data"

# The physical path(s) to the UNA site(s) on the server.
# For multiple sites, use a comma-separated list (e.g., "/opt/una,/var/www/site2").
BX_DIRECTORY_PATH_ROOT="/opt/una" 

# Retention periods (Daily retention is time-based, others are count-based)

# Daily: Keep files older than N days (used for daily folder cleanup)
RETENTION_DAILY_DAYS=7

# Weekly: Keep the N most recent weekly backup copies
RETENTION_WEEKLY_COUNT=4

# Monthly: Keep the N most recent monthly backup copies
RETENTION_MONTHLY_COUNT=12

# Annual: Keep files older than N years (NEW: used for annual folder cleanup)
RETENTION_ANNUAL_YEARS=5